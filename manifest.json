{
    "manifest_version": 2,
    "name": "Novel Updates",
	"version": "1.0",

    "description": "Add a notification icon and reading shortcuts for your Novel Updates reading list..",
	"homepage_url": "https://github.com/Spark-NF/novel-updates",
    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
	},

	"applications": {
		"gecko": {
			"id": "novel-updates-firefox@nicolas-faure.fr",
			"strict_min_version": "42.0"
		}
	},

	"background": {
		"scripts": [
			"src/vendor/js/browser-polyfill.min.js",
			"src/background/bundle.js"
		]
	},

	"permissions": [
		"storage",
		"cookies",
		"notifications",
		"webNavigation",
		"*://www.novelupdates.com/*"
	],

	"browser_action": {
		"default_icon": {
			"16": "icons/action-16.png",
			"32": "icons/action-32.png",
			"64": "icons/action-64.png"
		},
		"theme_icons": [{
			"light": "icons/action-16-light.png",
			"dark": "icons/action-16.png",
			"size": 16
		},{
			"light": "icons/action-32-light.png",
			"dark": "icons/action-32.png",
			"size": 32
		},{
			"light": "icons/action-64-light.png",
			"dark": "icons/action-64.png",
			"size": 64
		}],
		"default_title": "Novel Updates",
		"default_popup": "src/popup/popup.html"
	},

	"sidebar_action": {
		"default_icon": {
			"16": "icons/action-16.png",
			"32": "icons/action-32.png",
			"64": "icons/action-64.png"
		},
		"default_title": "Novel Updates",
		"default_panel": "src/sidebar/sidebar.html"
	},

	"content_scripts": [{
		"matches": [
			"*://www.webnovel.com/*",
			"*://m.webnovel.com/*",
			"*://www.wuxiaworld.com/*"
		],
		"all_frames": true,
		"run_at": "document_start",
		"js": ["src/userstyles/bundle.js"]
	}],

	"web_accessible_resources": [
		"src/userstyles/css/*.css"
	]
}