{
  "name": "novel-updates-notifier",
  "version": "0.0.0",
  "description": "Add-on that notifies you when a novel from your reading list has a new chapter available.",
  "scripts": {
    "postinstall": "bash scripts/postinstall.sh",
    "build": "bash scripts/build.sh",
    "watch": "npm-watch build",
    "check": "bash scripts/check.sh",
    "test": "bash scripts/test.sh",
    "package": "bash scripts/package.sh chrome && bash scripts/package.sh firefox",
    "check-package": "bash scripts/check-package.sh"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,html,css",
      "quiet": false
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Spark-NF/novel-updates-notifier.git"
  },
  "author": "Spark-NF",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Spark-NF/novel-updates-notifier/issues"
  },
  "homepage": "https://github.com/Spark-NF/novel-updates-notifier#readme",
  "dependencies": {
    "@types/firefox-webext-browser": "64.0.0",
    "bootstrap": "4.2.1",
    "font-awesome": "4.7.0",
    "rollup": "0.68.2",
    "typescript": "3.2.2",
    "webextension-polyfill": "0.3.1"
  },
  "devDependencies": {
    "@types/jasmine": "3.3.5",
    "addons-linter": "1.5.0",
    "event-stream": "3.3.4",
    "jasmine-core": "3.3.0",
    "karma": "3.1.4",
    "karma-chrome-launcher": "2.2.0",
    "karma-coverage": "1.1.2",
    "karma-jasmine": "2.0.1",
    "karma-spec-reporter": "0.0.32",
    "npm-watch": "0.5.0",
    "remap-istanbul": "0.12.0",
    "rollup-plugin-multi-entry": "2.1.0",
    "tslint": "5.12.0"
  }
}
