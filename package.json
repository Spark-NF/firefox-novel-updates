{
  "name": "firefox-novel-updates",
  "version": "1.0.0",
  "description": "Add-on for Firefox that notifies you when a novel from your reading list has a new chapter available.",
  "scripts": {
    "postinstall": "bash scripts/postinstall.sh",
    "build": "bash scripts/build.sh",
    "watch": "npm-watch build",
    "check": "bash scripts/check.sh"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,html,css",
      "quiet": false
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Spark-NF/firefox-novel-updates.git"
  },
  "author": "Spark-NF",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Spark-NF/firefox-novel-updates/issues"
  },
  "homepage": "https://github.com/Spark-NF/firefox-novel-updates#readme",
  "dependencies": {
    "@types/firefox-webext-browser": "^58.0.3",
    "bootstrap": "^4.1.1",
    "font-awesome": "^4.7.0",
    "npm-watch": "^0.3.0",
    "rollup": "^0.60.0",
    "tslint": "^5.10.0",
    "typescript": "^2.9.1"
  }
}
