{
  "name": "novel-updates-notifier",
  "version": "1.0.0",
  "description": "Add-on that notifies you when a novel from your reading list has a new chapter available.",
  "scripts": {
    "postinstall": "bash scripts/postinstall.sh",
    "build": "bash scripts/build.sh",
    "watch": "npm-watch build",
    "check": "bash scripts/check.sh",
    "package": "bash scripts/package.sh chrome && bash scripts/package.sh firefox"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,html,css",
      "quiet": false
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Spark-NF/novel-updates.git"
  },
  "author": "Spark-NF",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Spark-NF/novel-updates/issues"
  },
  "homepage": "https://github.com/Spark-NF/novel-updates#readme",
  "dependencies": {
    "@types/firefox-webext-browser": "64.0.0",
    "bootstrap": "4.2.1",
    "font-awesome": "4.7.0",
    "rollup": "0.68.2",
    "typescript": "3.2.2",
    "webextension-polyfill": "0.3.1"
  },
  "devDependencies": {
    "event-stream": "3.3.4",
    "npm-watch": "0.5.0",
    "tslint": "5.12.0"
  }
}
